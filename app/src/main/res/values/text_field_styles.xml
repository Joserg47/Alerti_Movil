<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextFieldStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textfield_outline_states</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        
        <item name="hintTextColor">@color/textfield_hint_states</item>
        <item name="placeholderTextColor">@color/textfield_placeholder</item>
        
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
    </style>

    <style name="M3BodyLargeTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>
</resources>

