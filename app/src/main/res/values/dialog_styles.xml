<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CustomMaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/m3_sys_light_on_surface</item>
        
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="DialogShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/m3_sys_light_on_surface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/m3_sys_light_primary_container</item>
        <item name="android:textColor">@color/m3_sys_light_on_primary_container</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearanceOverlay">@style/DialogButtonShapeAppearance</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
