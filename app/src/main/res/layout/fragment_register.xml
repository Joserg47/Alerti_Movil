<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fitsSystemWindows="true"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="52dp"
        android:paddingBottom="32dp"
        android:clipToPadding="false">

        <!-- Title -->
        <TextView
            android:id="@+id/titleRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textSize="26sp"
            android:textColor="@color/text_primary"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- First divider -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/horizontal_divider"
            app:layout_constraintTop_toBottomOf="@id/titleRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Datos personales section -->
        <TextView
            android:id="@+id/datosPersonalesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/datos_personales"
            android:textSize="22sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="24dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre completo field -->
        <com.example.alerti.CustomTextFieldView
            android:id="@+id/nameField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="44dp"
            app:label="@string/nombre_completo_label"
            app:placeholder="@string/nombre_completo_placeholder"
            app:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/datosPersonalesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Fecha de nacimiento field -->
        <com.example.alerti.CustomTextFieldView
            android:id="@+id/birthDateField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="44dp"
            app:label="@string/fecha_nacimiento_label"
            app:placeholder="@string/fecha_nacimiento_placeholder"
            app:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/nameField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Género dropdown -->
        <com.example.alerti.CustomDropdownView
            android:id="@+id/genderDropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="44dp"
            app:dropdownLabel="@string/dropdown_gender_label"
            app:dropdownPlaceholder="@string/dropdown_gender_placeholder"
            app:dropdownOptions="@array/gender_options"
            app:layout_constraintTop_toBottomOf="@id/birthDateField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Número de celular field -->
        <com.example.alerti.CustomTextFieldView
            android:id="@+id/phoneField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="44dp"
            app:label="@string/numero_celular_label"
            app:placeholder="@string/numero_celular_placeholder"
            app:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/genderDropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        

        <!-- Second divider -->
        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/horizontal_divider"
            app:layout_constraintTop_toBottomOf="@id/phoneField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Datos de cuenta section -->
        <TextView
            android:id="@+id/datosCuentaTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/datos_cuenta"
            android:textSize="22sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="24dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Usuario field -->
        <com.example.alerti.CustomTextFieldView
            android:id="@+id/usernameField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="44dp"
            app:label="@string/usuario_label"
            app:placeholder="@string/usuario_placeholder"
            app:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/datosCuentaTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contraseña field -->
        <com.example.alerti.CustomTextFieldView
            android:id="@+id/passwordField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="44dp"
            app:label="@string/contrasena_label"
            app:placeholder="@string/contrasena_placeholder"
            app:inputType="password"
            app:layout_constraintTop_toBottomOf="@id/usernameField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.example.alerti.CustomButtonView
            android:id="@+id/registerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:buttonText="@string/crear_cuenta_button"
            app:buttonVariant="primary"
            app:buttonSize="small"
            app:layout_constraintTop_toBottomOf="@id/passwordField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/alreadyHaveAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/ya_tienes_cuenta"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/registerButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="@string/inicia_sesion"
            android:textColor="#858485"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/alreadyHaveAccountText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>